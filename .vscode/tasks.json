{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/vsopcompiler"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "bash",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "${workspaceFolder}/run_tests.sh"
            ],
            "problemMatcher": "$gcc",
        }
    ]
}
